<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditorFragment">


    <ImageView
        android:layout_width="414dp"
        android:layout_height="287dp"
        android:src="@drawable/rectangle" />

    <ImageView
        android:layout_width="196dp"
        android:layout_height="181dp"
        android:src="@drawable/group_6" />

    <ImageButton
        android:id="@+id/back"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:background="@drawable/back_arrow"
        android:translationX="24dp"
        android:translationY="50dp" />


    <ImageButton
        android:id="@+id/addExpense"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:background="@drawable/back_arrow"
        android:translationX="350dp"
        android:translationY="50dp"
        android:scaleX="-1"
        />

    <TextView
        android:id="@+id/addTripTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Add Trip"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />


    <ImageView
        android:layout_width="358dp"
        android:layout_height="604dp"
        android:src="@drawable/rectangle_1"
        android:translationX="28dp"
        android:translationY="113dp" />


    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:translationX="70dp"
        android:translationY="160dp">

        <AutoCompleteTextView
            android:id="@+id/nameTrip"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_white_corner_10_gray"
            android:layout_weight="1"
            android:inputType="none"
            android:textColor="@color/black" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tripName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textColor="@color/cardview_dark_background"
        android:textSize="13dp"
        android:textStyle="bold"
        android:translationX="70dp"
        android:translationY="145dp" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:translationX="70dp"
        android:translationY="250dp"
        android:hint="Transportation"
        >
        <AutoCompleteTextView
            android:textColor="@color/black"
            android:id="@+id/transportationTrip"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_white_corner_10_gray"
            android:layout_weight="1"
            android:inputType="none"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tripDestination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transportation"
        android:textColor="@color/cardview_dark_background"
        android:textSize="13dp"
        android:textStyle="bold"
        android:translationX="70dp"
        android:translationY="230dp" />

    <TextView
        android:id="@+id/tripTransport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Destination"
        android:textColor="@color/cardview_dark_background"
        android:textSize="13dp"
        android:textStyle="bold"
        android:translationX="70dp"
        android:translationY="320dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Participant"
        android:textColor="@color/cardview_dark_background"
        android:textSize="13dp"
        android:textStyle="bold"
        android:translationX="220dp"
        android:translationY="320dp" />

    <EditText
        android:id="@+id/destinationTrip"
        android:layout_width="136dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_white_corner_10_gray"
        android:hint="  Destination"
        android:textColor="@color/black"
        android:translationX="70dp"
        android:translationY="340dp" />

    <EditText
        android:id="@+id/participant"
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_white_corner_10_gray"
        android:hint="  Participant"
        android:inputType="number"
        android:textColor="@color/black"
        android:translationX="220dp"
        android:translationY="340dp" />

    <TextView
        android:id="@+id/tripDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textColor="@color/cardview_dark_background"
        android:textSize="13dp"
        android:textStyle="bold"
        android:translationX="70dp"
        android:translationY="400dp" />

    <TextView
        android:id="@+id/tripRisk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Risk Assessment"
        android:textColor="@color/cardview_dark_background"
        android:textSize="13dp"
        android:textStyle="bold"
        android:translationX="70dp"
        android:translationY="500dp" />

    <TextView
        android:id="@+id/tripDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textColor="@color/cardview_dark_background"
        android:textSize="13dp"
        android:textStyle="bold"
        android:translationX="70dp"
        android:translationY="570dp" />

    <EditText
        android:id="@+id/dateTime"
        android:layout_width="275dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_white_corner_10_gray"
        android:hint="  Date"
        android:textColor="@color/black"
        android:translationX="70dp"
        android:translationY="430dp" />


    <RadioGroup
        android:id="@+id/riskAssessment"
        android:layout_width="269dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:translationX="70dp"
        android:translationY="510dp">

        <RadioButton
            android:id="@+id/radioButtonYes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes"
            android:textColor="@color/black" />

        <RadioButton
            android:id="@+id/radioButtonNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:text="No"
            android:textColor="@color/black" />
    </RadioGroup>


    <EditText
        android:id="@+id/desc"
        android:layout_width="275dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_white_corner_10_gray"
        android:hint="  Description"
        android:textColor="@color/black"
        android:translationX="70dp"
        android:translationY="590dp" />

    <ImageView
        android:id="@+id/add_icon"
        android:layout_width="19.2dp"
        android:layout_height="19.2dp"
        android:translationX="150dp"
        android:translationY="675dp"
        android:background="@drawable/add" />

    <TextView
        android:id="@+id/addTripText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Add Trip"
        android:textColor="@color/cardview_dark_background"
        android:layout_marginLeft="20dp"
        android:textSize="13dp"
        android:translationY="675dp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/addTrip"
        android:layout_width="275dp"
        android:layout_height="50dp"
        android:background="@drawable/rectangle_2"
        android:translationX="70dp"
        android:translationY="660dp" />

</RelativeLayout>